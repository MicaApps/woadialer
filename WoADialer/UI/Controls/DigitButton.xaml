<Button
    x:Class="WoADialer.UI.Controls.DigitButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WoADialer.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="tb_Digit" Text=" " FontSize="24" FontFamily="Segoe UI" VerticalAlignment="Center" Grid.Row="1" Height="32" HorizontalAlignment="Right" Width="13"/>
        <TextBlock Name="tb_Chars" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,3,0,0" FontSize="10" Grid.Row="1" Height="13" Width="36" Grid.Column="1"/>
        <TextBlock Name="tb_AdditionalChars" Text="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="2,16,0,0" FontSize="10" Grid.Row="1" Height="13" Width="36" Grid.Column="1"/>
    </Grid>
</Button>
